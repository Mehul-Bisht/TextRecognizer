<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.mehul.textrecognizer.ui.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_oldScansFragment"
            app:destination="@id/oldScansFragment" />
    </fragment>
    <fragment
        android:id="@+id/textToSpeechFragment"
        android:name="com.mehul.textrecognizer.ui.fragments.TextToSpeechFragment"
        android:label="Text Recogniser"
        tools:layout="@layout/fragment_text_to_speech" />
    <fragment
        android:id="@+id/oldScansFragment"
        android:name="com.mehul.textrecognizer.ui.fragments.OldScansFragment"
        android:label="Old Scans"
        tools:layout="@layout/fragment_old_scans" >
        <action
            android:id="@+id/action_oldScansFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.mehul.textrecognizer.ui.fragments.DetailsFragment"
        android:label="Scan Details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="scan"
            app:argType="com.mehul.textrecognizer.scans.Scan" />
    </fragment>
</navigation>